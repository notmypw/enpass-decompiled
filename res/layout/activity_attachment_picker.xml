<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res-auto" app:layout_width="match_parent" app:layout_height="match_parent">
    <LinearLayout app:orientation="vertical" app:layout_width="match_parent" app:layout_height="match_parent"
        <LinearLayout app:gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:orientation="horizontal" app:padding="@dimen/normal_10dp" app:layout_width="match_parent" app:layout_height="wrap_content">
            <ImageButton app:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill" app:id="@+id/attachment_file_chooser_img_back" app:background="@locationawarelogger/TRACE_INT" app:layout_width="wrap_content" app:layout_height="wrap_content" app:src="@drawable/folder_sync_back_btn" />
            <TextView app:textAppearance="@r$style/TextAppearance_AppCompat_Medium" app:ellipsize="start" app:id="@+id/attachment_file_chooser_tv_path" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_marginLeft="@dimen/normal_10dp" app:maxLines="1" />
        </LinearLayout>
        <ListView app:id="@+id/attachment_list_file_chooser" app:layout_width="match_parent" app:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
