<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:id="@+id/webdav_main_layout_scrollview" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:id="@+id/restore_webdav_auth_layout" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textStyle="bold" android:id="@+id/webdav_url_label_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/webdav_login_page_summary" />
            <TextView android:textStyle="bold" android:id="@+id/webdav_url_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="20dp" android:text="@string/webdav_login_url" />
            <EditText android:id="@+id/webdav_url" android:paddingLeft="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/webdav_login_url_hint" android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberPassword|phone|date" android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious|flagNoExtractUi" />
            <TextView android:textStyle="bold" android:id="@+id/webdav_username_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="20dp" android:text="@string/webdav_login_username" />
            <EditText android:id="@+id/webdav_username" android:paddingLeft="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/webdav_login_username_hint" android:singleLine="true" android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious|flagNoExtractUi" />
            <TextView android:textStyle="bold" android:id="@+id/webdav_password_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="20dp" android:text="@string/webdav_login_password" />
            <EditText android:id="@+id/webdav_password" android:paddingLeft="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/webdav_login_password_hint" android:singleLine="true" android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone" android:imeOptions="actionGo|actionSearch|actionSend|actionNext|actionDone|actionPrevious|flagNoExtractUi" />
            <TextView android:textAppearance="@*android:style/TextAppearance.Large" android:textColor="0x1060017" android:id="@+id/webdav_restore_warning" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="20dp" android:text="@string/webdav_login_warning" />
            <TextView android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/invalid_ssl_error_code" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="invalid_ssl_error_code" />
            <TextView android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/invalid_ssl_error_msg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="invalid_ssl_error_msg" />
            <Button android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/btn_show_certificate" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="temp ssl_validator_btn_details_see" android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/webdav_auth_porgress" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerInParent="true">
        <ProgressBar android:id="@+id/webdav_auth_bar" android:layout_width="UNKNOWN_DATA_0x3c01" android:layout_height="UNKNOWN_DATA_0x3c01" android:layout_above="@+id/webdav_dummy_view" android:layout_centerHorizontal="true" />
        <View android:id="@+id/webdav_dummy_view" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x101" android:layout_centerVertical="true" />
        <TextView android:textAppearance="@*android:style/TextAppearance.Medium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Authenticating.." android:layout_below="@+id/webdav_dummy_view" android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
